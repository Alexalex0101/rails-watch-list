<div class="header">
  <h1>Movies</h1>
  <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-flat' %>
  <div class="row">
    <ul>
      <% @lists.each do |list| %>
        <li>
          <div class="co-12 colsm-6 col-md-4">
            <%= link_to list_path(list), class:'text-decoration-none' do %>
              <div class="card-category">
                <%= list.name %>
              </div>
          </div>
        </li>
            <% end %>
      <% end %>
    </ul>
  </div>
</div>

    <div class="accordion">
      <ul>
        <% @movies.each do |movie| %>
          <li>
            <div class="image_title">
              <a href="#"><%= movie.title %></a>
              <p><%= movie.overview %></p>
              <p><%= movie.rating %></p>
            </div>
              <img src=<%= movie.poster_url %> border=0>
          </li>
    <% end %>
      </ul>
    </div>




